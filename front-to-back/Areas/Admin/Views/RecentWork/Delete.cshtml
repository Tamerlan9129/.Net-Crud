@using front_to_back.Models
@model RecentWorkComponent


<div class="main-panel">
    <div class="content-wrapper">

        <div class="row">
            <div class="col-md-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">

                        <p class="card-description">
                            Delete Work Component
                        </p>
                        <span>Title:</span>
                        <span>@Model.Title</span>
                        <br />
                        <br />
                        <span>Text</span>
                        <span>@Model.Text</span>
                        <br />
                        <br />
                        <span>FilePath</span>
                        <span>@Model.FilePath</span>

                        <form method="post" asp-action="deletecomponent" asp-area="admin" asp-controller="recentwork" asp-route-id=@Model.Id>
                            <button onclick="confirm('Are you sure?')" class="btn btn-danger" >Delete</button>
                            <button class="btn btn-warning" asp-action="index" asp-controller="recentwork" asp-area="admin">Cancel</button>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


