@using front_to_back.Models
@model Category


<div class="main-panel">
    <div class="content-wrapper">

        <div class="row">
            <div class="col-md-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">

                        <p class="card-description">
                            Delete Category
                        </p>
                      <span>Title:</span>
                      <span>@Model.Title</span>
                      <br />
                      <br />
                        <form method="post" asp-action="deletecategory" asp-controller="category" asp-area="admin" asp-route-id="@Model.Id">
                            <button onclick="confirm('Are you sure?')" class="btn btn-danger" >YesS</>
                            <button class="btn btn-warning" asp-action="index" asp-controller="category" asp-area="admin">Cancel</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


